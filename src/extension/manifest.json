{
  "manifest_version": 3,
  "name": "Job Hunter OS",
  "version": "1.1.0",
  "description": "Capture job listings from LinkedIn and Indeed to your Airtable pipeline",

  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],

  "host_permissions": [
    "*://*.linkedin.com/*",
    "*://*.indeed.com/*",
    "https://api.airtable.com/*"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Job Hunter OS Settings"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/jobs/*",
        "*://*.indeed.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
