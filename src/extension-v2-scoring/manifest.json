{
  "manifest_version": 3,
  "name": "Job Filter",
  "version": "1.1.0",
  "description": "Capture job listings from LinkedIn and Indeed to your Airtable pipeline with intelligent job fit scoring",

  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],

  "host_permissions": [
    "*://*.linkedin.com/*",
    "*://*.indeed.com/*",
    "https://api.airtable.com/*"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Job Filter Settings"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/*",
        "*://*.indeed.com/*"
      ],
      "js": [
        "skills/skill-taxonomy.js",
        "skills/skill-constants.js",
        "skills/fuzzy-matcher.js",
        "skills/skill-normalizer.js",
        "skills/skill-extractor.js",
        "skills/skill-matcher.js",
        "skills/skill-integration.js",
        "skills/index.js",
        "scoring-engine.js",
        "results-dashboard.js",
        "sidebar-rail.js",
        "mode-detection.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "profile-setup.html",
        "profile-setup.css",
        "profile-setup.js",
        "results-dashboard.html",
        "results-dashboard.css",
        "scoring-schema.json",
        "skills/skill-taxonomy.js",
        "skills/skill-constants.js",
        "skills/fuzzy-matcher.js",
        "skills/skill-normalizer.js",
        "skills/skill-extractor.js",
        "skills/skill-matcher.js",
        "skills/skill-integration.js",
        "skills/index.js",
        "skill-match.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
